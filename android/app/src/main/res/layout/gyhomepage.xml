<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GyHomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:weightSum="6"
        android:padding="10dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="3"
            android:background="@drawable/shapered"
            android:onClick="onsendorderClick"
            android:text="派单"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="3">

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:onClick="onmessageClick"
                android:text="\n消\n息\n"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape"
                android:onClick="onpersoncenterClick"
                android:text="个\n人\n中\n心"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:padding="1dp"
            android:layout_height="180dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/shape"
                android:onClick="onwrokposClick"
                android:text="工地管理"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="78dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:onClick="OnPastorderClick"
                    android:text="历史工单"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="0dp"
                    android:layout_height="78dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:ems="1"
                    android:onClick="OnTomorroworderClick"
                    android:text="次日工单"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="3"
            android:layout_height="160dp"
            android:background="@drawable/shapered"
            android:onClick="OnTodayorderClick"
            android:text="今日工单"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>


</LinearLayout>